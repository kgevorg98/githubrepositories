<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:cardCornerRadius="8dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repo_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="@font/roboto_bold"
            android:scrollHorizontally="false"
            android:textColor="@color/black"
            android:textSize="@dimen/repo_number_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="none"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:textColor="@color/link_color"
            android:textSize="@dimen/repo_name_text_size"
            app:layout_constraintEnd_toStartOf="@id/iv_download"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/repo_number"
            app:layout_constraintTop_toTopOf="@id/repo_number"
            app:layout_constraintVertical_bias="1.0"
            tools:text="repo name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_download_24"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@id/repo_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/repo_title"
            app:layout_constraintTop_toTopOf="@id/repo_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
